                            </ul>
                        </li>

                        <!-- Agendas -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" data-bs-toggle="dropdown">Agendas</a>
                            <ul class="dropdown-menu dropdown-dark">
                                <li><a runat="server" href="~/Pantallas-Perfil_Recepcionista/ConfigurarAgendaProfesional.aspx" class="dropdown-item">Configurar Agenda Profesional</a></li>
                            </ul>
                        </li>

                        <!-- Especialidades -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" data-bs-toggle="dropdown">Especialidades</a>
                            <ul class="dropdown-menu dropdown-dark">
                                <li><a runat="server" href="~/Pantallas-Perfil_Recepcionista/GestionarEspecialidades.aspx" class="dropdown-item">Gestionar Especialidades</a></li>
                            </ul>
                        </li>

